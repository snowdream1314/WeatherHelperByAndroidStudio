<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39°"
                android:textColor="#FFFFFF"
                android:textSize="80sp"
                android:includeFontPadding="false"
                android:layout_below="@+id/tv_weather"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_temp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_trend_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/trend_wind_1"/>
                <TextView
                    android:id="@+id/tv_trend_wind_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2级"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/iv_trend_wind"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_icon_humidity"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39%"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#6Feeeeee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_today_aqi"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@mipmap/aqi_detail_good"
                android:text="良"
                android:textColor ="#FFFFFF"
                android:layout_toRightOf="@id/tv_today"
                android:gravity="center"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_today_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/32℃"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_today_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_below="@+id/tv_today"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/iv_today_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ww0"
                android:layout_below="@+id/tv_today_temp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#6Feeeeee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/tv_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_tomorrow_aqi"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@mipmap/aqi_detail_good"
                android:text="良"
                android:textColor ="#FFFFFF"
                android:layout_toRightOf="@id/tv_tomorrow"
                android:gravity="center"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_tomorrow_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/32℃"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_tomorrow_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_below="@+id/tv_tomorrow"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/iv_tomorrow_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ww0"
                android:layout_below="@+id/tv_tomorrow_temp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
