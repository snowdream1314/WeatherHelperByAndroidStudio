<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_usercenter_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_background_usercenter"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_usercenter_item_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:id="@+id/tv_usercenter_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淘宝账号授权"
                android:textSize="16sp"
                android:textColor="#FF424242"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_usercenter_item_note"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="立即授权"
            android:textSize="16sp"
            android:textColor="#FFf87760"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>

</LinearLayout>